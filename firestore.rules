rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return isSignedIn() && request.auth.uid == userId; }

    // Users: Private account data
    match /users/{userId} {
      allow get, update, delete: if isOwner(userId);
      allow create: if isOwner(userId);
    }

    // User Profiles: Public to read, private to edit
    match /user_profiles/{profileId} {
      allow get, list: if isSignedIn(); // Allow others to see profiles for matching
      allow create, update, delete: if isOwner(profileId);
    }

    // Matches: Only participants can see the connection
    match /matches/{matchId} {
      allow read, update, delete: if isSignedIn() &&
        (resource.data.user1Id == request.auth.uid || resource.data.user2Id == request.auth.uid);
      
      // Ensure the creator is one of the participants
      allow create: if isSignedIn() &&
        (request.resource.data.user1Id == request.auth.uid || request.resource.data.user2Id == request.auth.uid);
    }

    // Messages: Denormalize participantIds into the message for cheaper reads
    match /matches/{matchId}/messages/{messageId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds
                    && request.resource.data.senderId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
    }

    // Job Postings & Investment Opportunities: Public read, owner write
    match /{collection}/{docId} {
      allow read: if collection in ['job_postings', 'investment_opportunities', 'investment_theses'];
      
      allow create: if isSignedIn() &&
        (request.resource.data.founderId == request.auth.uid || request.resource.data.authorId == request.auth.uid);
        
      allow update, delete: if isSignedIn() &&
        (resource.data.founderId == request.auth.uid || resource.data.authorId == request.auth.uid);
        
      // Match helper for specific collections
      function isInvestmentContent() {
        return collection in ['job_postings', 'investment_opportunities', 'investment_theses'];
      }
    }

    // Financial Summaries: Locked to authorized roles (e.g., users with 'investor' custom claim)
    match /financial_summaries/{summaryId} {
      allow read: if isSignedIn() && (isOwner(resource.data.ownerId) || request.auth.token.role == 'investor');
      allow create, update: if isOwner(request.resource.data.ownerId);
    }
  }
}
